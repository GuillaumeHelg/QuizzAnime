<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizzAnime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Bouton commencer // probleme pas la bonne couleur   -->


    <!-- Creer le composant du record sur la page d'accueil-->
    <style name="RecordStyle">
        <item name="android:gravity">center</item>
        <item name="android:text">@string/page_accueil_record</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>



    <style name="colorla">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

        <!-- Creer le composant de titre blanc -->
    <style name="TitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <!-- Creer le composant des choix en blanc -->
    <style name="TexteChoixStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:text">@string/page_accueil_section_classique_texte</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="boutonRight">
        <item name="android:src">@drawable/ic_right</item>
    </style>








    <!-- Creer le composant des noms d'animes pendant le jeu -->
    <style name="NomAnimeStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <!-- Creer le composant des textes dans l'entête lors d'une partie-->
    <style name="EnteteStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <!-- Creer le composant des textes sur les pop up-->
    <style name="PopUpTexteStyle">
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>



    <!-- Creer le composant score sur les pop up-->
    <style name="ScoreStyle">
        <item name ="android:textColor">@color/backgroundcolor</item>
        <item name ="android:textSize">50sp</item>
        <item name ="android:fontFamily">@font/roboto_black</item>
    </style>

    <!-- Style pour les bords arrondi de la popup règle -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>
</resources>